<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Operacion_de_2_numeros.MainPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        <Label Text="Operacion de 2 numeros"/>
        <Entry Placeholder="Dato1"
               x:Name="Dato1"
               Keyboard="Numeric"/>


        <Entry Placeholder="Dato2"
               x:Name="Dato2"
               Keyboard="Numeric"/>


        <Entry Placeholder="Resultado"
               x:Name="Resultado"
               IsEnabled="False"/>


        <Button Text="Suma" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
